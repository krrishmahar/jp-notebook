from sklearn.tree import DecisionTreeRegressor

tree_reg = DecisionTreeRegressor(max_depth=3, min_samples_leaf=10)
tree_reg.fit(X, y)


export_graphviz?


export_graphviz(
    tree_reg,
    out_file="iris_reg_tree.dot",
    feature_names=iris.feature_names[2:],
    class_names=iris.target_names,
    rounded=True,
    filled=True, 
    max_depth=3
)





